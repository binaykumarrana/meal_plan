<div class="title-container">
  <h1>Recipes</h1>
  <%= link_to "New Recipe", new_recipe_path, class: "btn btn-default" %>
</div>

<div class="recipes">
  <% @recipes.each do |recipe| %>
    <div class="recipe">
      <div class="thumbnail">
        <div class="caption">
          <h3><%= link_to truncate(recipe.name), recipe_path(recipe) %></h3>
          <p><%= truncate(recipe.description, length: 150) %></p>
          <p>
            <%= link_to "favorite",   favorite_recipe_path(recipe, type: "favorite"),remote: true,method: :post, class: "btn btn-primary"%>
            <%= link_to "unfavorite", favorite_recipe_path(recipe, type: "unfavorite"), class: "btn btn-primary", method: :post %>
            <%= link_to "Edit", edit_recipe_path(recipe), class: "btn btn-primary" %>
            <%= link_to "Delete", recipe_path(recipe), class: "btn btn-primary", data: {
              confirm: "Are you sure you want to delete: #{recipe.name}?",
            }, method: :delete %>
          </p>
        </div>
      </div>
    </div>
  <% end %>
</div>