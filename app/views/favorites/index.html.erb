<div class="title-container">
  <h1>Your Favorites Recipes</h1>
</div>

<div class="favorites">
  <% @favorites.each do |favorite| %>
    <div class="favorite">
      <div class="thumbnail">
        <div class="caption">
          <h3><%= link_to truncate(recipe.name), recipe_path(recipe) %></h3>
          <p><%= truncate(recipe.description, length: 150) %></p>
        
        </div>
      </div>
    </div>
  <% end %>
</div>